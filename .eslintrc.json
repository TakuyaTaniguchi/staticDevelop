{
    "env": {
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-extra-semi": "warn",
        "no-undef": "warn",
        "quotes": ["warn", "single"],
        "space-before-blocks": ["warn", { "functions": "always" }],
        "prettier/prettier": [
            "error",
            {
              "singleQuote": true,
              "trailingComma": "es5"
            }
          ]
    }
}